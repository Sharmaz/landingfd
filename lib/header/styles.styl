.Header
	margin 0
	padding 0
	width 100%
	height 568px
	background linear-gradient(rgba(75,0,0,.5),rgba(0,0,0,.5)), url("../images/Devs.jpg")
	background-size cover
	background-position center
	text-align center
	&-copy
		font-size 2.5rem
		font-family 'Varela', sans-serif
		color white
		margin 0
		padding 10rem 0 7rem 0
	&-button
		background #F73B5C
		border none
		border-radius 3px
		color white
		font-family 'Inconsolata'
		font-size 2rem
		margin 1rem
		padding .5rem .7rem
@media screen and (min-width: 768px)
	.Header
		height 650px
	.Header-copy
		font-size 3rem
		padding 17rem 0 7rem 0
	.Header-button
		font-size 2rem
		margin 1rem